<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player"
    android:background="@drawable/backcover">

    <Button
        android:id="@+id/playbtn"
        android:layout_width="127dp"
        android:layout_height="111dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@mipmap/pausebtn"
        android:onClick="playbtn"
        android:visibility="visible"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="273dp" />


    <Button
        android:id="@+id/playbtn4"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_below="@+id/playbtn"
        android:layout_alignStart="@+id/playbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="41dp"
        android:background="@mipmap/playbtn"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/playbtn"
        android:background="@mipmap/nextbutton"
        android:onClick="nextbtn"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="41dp"
        android:layout_toStartOf="@+id/playbtn"
        android:background="@mipmap/backbutton"
        android:onClick="backbtn"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="273dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="221dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="PLAYING"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/coverart"
        android:layout_width="194dp"
        android:layout_height="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        app:srcCompat="@mipmap/fallback_cover" />

    <TextView
        android:id="@+id/songtitle"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="-247dp"
        android:layout_toStartOf="@+id/playbtn"
        android:textSize="30sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/backbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp" />

</RelativeLayout>